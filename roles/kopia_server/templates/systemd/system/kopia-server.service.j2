[Unit]
Description=Kopia Server
After=network-online.target

[Service]
Type=simple
User=backup
Group=backup
AmbientCapabilities=CAP_NET_BIND_SERVICE
ExecStart=/usr/bin/kopia server start \
  --tls-cert-file {{ kopia_server__home }}/ssl/fullchain.pem \
  --tls-key-file {{ kopia_server__home }}/ssl/privkey.pem \
  --server-username {{ kopia_server__username }} \
  --address https://0.0.0.0:443

[Install]
WantedBy=multi-user.target
